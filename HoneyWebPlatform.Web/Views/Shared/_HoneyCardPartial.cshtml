@using HoneyWebPlatform.Services.Data.Interfaces
@using HoneyWebPlatform.Web.Infrastructure.Extensions
@model HoneyAllViewModel

@inject IBeekeeperService BeekeeperService
@inject IHoneyService HoneyService
@{
    bool isUserBeekeeper = await BeekeeperService.BeekeeperExistsByUserIdAsync(User.GetId()!);
    bool isBeekeeperOwnerOfTheHoney = await BeekeeperService.HasHoneyWithIdAsync(User.GetId(), Model.Id);
}

<div class="honey-card">
    <div class="honey-card-image">
        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid">
    </div>
    
    <div class="honey-card-body">
        <h5 class="honey-card-title">@Model.Title</h5>
        <p class="honey-card-origin">
            <i class="fas fa-map-marker-alt"></i> @Model.Origin
        </p>
        <div class="honey-card-price">
            <span class="price">@($"{Model.Price:f2}") лв</span>
        </div>
        
        <div class="honey-card-actions">
            <a asp-area="" asp-controller="Honey" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm me-2">
                <i class="fas fa-eye"></i> Детайли
            </a>
            <form method="post" asp-area="" asp-controller="User" asp-action="AddToCart" asp-route-honeyId="@Model.Id" asp-route-quantity="1" class="d-inline">
                <button type="submit" class="btn btn-warning btn-sm">
                    <i class="fas fa-shopping-cart"></i> Купи
                </button>
            </form>
            
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                @if ((isUserBeekeeper && isBeekeeperOwnerOfTheHoney) || User.IsAdmin())
                {
                    <div class="admin-actions mt-2">
                        <a asp-area="" asp-controller="Honey" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Редактирай
                        </a>
                        <a asp-area="" asp-controller="Honey" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Изтрий
                        </a>
                    </div>
                }

                @if (User.IsAdmin())
                {
                    <form method="post" asp-area="Admin" asp-controller="Honey" asp-action="Promote" asp-route-id="@Model.Id" class="d-inline mt-2">
                        <button type="submit" class="btn btn-info btn-sm">
                            <i class="fas fa-star"></i> Промотирай
                        </button>
                    </form>
                }
            }
        </div>
    </div>
</div>

<style>
.honey-card {
    background: #fff;
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid #e9ecef;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.honey-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
}

.honey-card-image {
    position: relative;
    height: 220px;
    overflow: hidden;
    background: linear-gradient(135deg, #fff8f0 0%, #fef3e0 100%);
}

.honey-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.honey-card:hover .honey-card-image img {
    transform: scale(1.05);
}


.honey-card-body {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

.honey-card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 10px;
    line-height: 1.3;
}

.honey-card-origin {
    color: #7f8c8d;
    font-size: 0.9rem;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
}

.honey-card-origin i {
    margin-right: 5px;
    color: #F59F0A;
}

.honey-card-price {
    margin-bottom: 20px;
}

.price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #F59F0A;
}

.honey-card-actions {
    margin-top: auto;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    align-items: center;
}

.honey-card-actions .btn {
    flex: 1;
    min-width: 80px;
    font-size: 0.85rem;
    padding: 8px 12px;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s ease;
    text-decoration: none;
}

.honey-card-actions .btn:hover {
    transform: translateY(-1px);
    text-decoration: none;
}

.honey-card-actions .btn-outline-primary {
    color: #F59F0A;
    border-color: #F59F0A;
    background: transparent;
}

.honey-card-actions .btn-outline-primary:hover {
    background: #F59F0A;
    color: white;
    border-color: #F59F0A;
}

.honey-card-actions .btn-warning {
    background: #F59F0A;
    border-color: #F59F0A;
    color: white;
}

.honey-card-actions .btn-warning:hover {
    background: #E08E0B;
    border-color: #E08E0B;
    color: white;
}

.admin-actions {
    border-top: 1px solid #ecf0f1;
    padding-top: 10px;
    margin-top: 10px;
}

/* Responsive adjustments */
@@media (max-width: 1200px) {
    .honey-card-image {
        height: 200px;
    }
    
    .honey-card-body {
        padding: 18px;
    }
}

@@media (max-width: 992px) {
    .honey-card-image {
        height: 190px;
    }
    
    .honey-card-body {
        padding: 16px;
    }
    
    .honey-card-title {
        font-size: 1.2rem;
    }
    
    .price {
        font-size: 1.4rem;
    }
}

@@media (max-width: 768px) {
    .honey-card-image {
        height: 180px;
    }
    
    .honey-card-body {
        padding: 15px;
    }
    
    .honey-card-title {
        font-size: 1.1rem;
    }
    
    .price {
        font-size: 1.3rem;
    }
    
    .honey-card-actions {
        flex-direction: column;
        gap: 6px;
    }
    
    .honey-card-actions .btn {
        flex: none;
        width: 100%;
        margin-bottom: 0;
    }
    
    .admin-actions {
        flex-direction: column;
        gap: 4px;
    }
    
    .admin-actions .btn {
        flex: none;
        width: 100%;
        margin-bottom: 0;
    }
}

@@media (max-width: 576px) {
    .honey-card-image {
        height: 160px;
    }
    
    .honey-card-body {
        padding: 12px;
    }
    
    .honey-card-title {
        font-size: 1rem;
    }
    
    .honey-card-origin {
        font-size: 0.85rem;
    }
    
    .price {
        font-size: 1.2rem;
    }
    
    .honey-card-actions .btn {
        font-size: 0.8rem;
        padding: 6px 10px;
    }
}

/* Grid spacing */
.honey-grid .col-lg-4,
.honey-grid .col-md-6,
.honey-grid .col-sm-12 {
    margin-bottom: 30px;
}

/* Loading animation */
.honey-card {
    animation: fadeInUp 0.6s ease-out;
}

@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>
