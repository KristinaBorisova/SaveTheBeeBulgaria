@using HoneyWebPlatform.Web.Infrastructure.Extensions
@model AllHoneysQueryModel

@{
    ViewBag.Title = "Всички Медове";
}

@if (!Model.Honeys.Any())
{
    <div class="no-results">
        <i class="fas fa-search"></i>
        <h3>Няма намерени медове</h3>
        <p>Опитайте с различни критерии за търсене или се върнете към всички продукти.</p>
        <a href="@Url.Action("All", "Honey")" class="btn btn-primary modern-btn">
            <i class="fas fa-refresh"></i> Покажи всички медове
        </a>
    </div>
}

<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Медове</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="food_menu gray_bg">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-4">
                <div class="section_tittle">
                    <p>Домашно произведен</p>
                    <h2>Мед</h2>
                </div>
            </div>
            <div class="col-lg-8">
                <form method="get" class="modern-search-form">
                    <div class="row">
                        <div class="form-group col-xl-2 col-lg-3 col-md-6 col-sm-12">
                            <label asp-for="Category" class="form-label">
                                <i class="fas fa-filter"></i> Категория
                            </label>
                            <select asp-for="Category" class="form-control modern-select">
                                <option value="">Всички</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                        </div>

                        <div class="form-group col-xl-4 col-lg-4 col-md-6 col-sm-12">
                            <label asp-for="SearchString" class="form-label">
                                <i class="fas fa-search"></i> Търси
                            </label>
                            <input asp-for="SearchString" class="form-control modern-input" placeholder="Търси мед...">
                        </div>

                        <div class="form-group col-xl-3 col-lg-3 col-md-6 col-sm-12">
                            <label asp-for="HoneySorting" class="form-label">
                                <i class="fas fa-sort"></i> Подреди по
                            </label>
                            <select asp-for="HoneySorting" class="form-control modern-select">
                                <option value="0">Най-нов</option>
                                <option value="1">Най-популярен</option>
                                <option value="2">Най-ниска цена</option>
                                <option value="3">Най-висока цена</option>
                            </select>
                        </div>

                        <div class="col-xl-3 col-lg-2 col-md-6 col-sm-12">
                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary modern-btn w-100">
                                    <i class="fas fa-search"></i> Търси
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-12">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active single-member">
                        <div class="row honey-grid">
                            @foreach (var honey in Model.Honeys)
                            {
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                    <partial name="_HoneyCardPartial" model="@honey" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (!User.IsAdmin())
{
    <section class="intro_video_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro_video_iner text-center">
                        <h2>Expect The Best</h2>
                        <div class="intro_video_icon">
                            <a id="play-video_1" class="video-play-button popup-youtube"
                               href="https://www.youtube.com/watch?v=pBFQdxA-apI">
                                <span class="ti-control-play"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<style>
/* Modern Search Form Styling */
.modern-search-form {
    background: #fff;
    padding: 25px;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
}

.modern-search-form .form-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
}

.modern-search-form .form-label i {
    margin-right: 8px;
    color: #F59F0A;
    font-size: 0.9rem;
}

.modern-input,
.modern-select {
    border: 2px solid #ecf0f1;
    border-radius: 10px;
    padding: 12px 15px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    background: #f8f9fa;
    min-width: 120px;
}

.modern-input:focus,
.modern-select:focus {
    border-color: #F59F0A;
    box-shadow: 0 0 0 0.2rem rgba(245, 159, 10, 0.25);
    background: #fff;
    outline: none;
}

.modern-btn {
    background: linear-gradient(135deg, #F59F0A, #E08E0B);
    border: none;
    border-radius: 25px;
    padding: 12px 25px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(245, 159, 10, 0.3);
}

.modern-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(245, 159, 10, 0.4);
    background: linear-gradient(135deg, #E08E0B, #C77D0A);
}

.modern-btn:active {
    transform: translateY(0);
}

/* Section Title Enhancement */
.section_tittle h2 {
    background: linear-gradient(135deg, #F59F0A, #E08E0B);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
    font-size: 2.5rem;
}

.section_tittle p {
    color: #7f8c8d;
    font-size: 1.1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Responsive adjustments */
@@media (max-width: 1400px) {
    .modern-search-form {
        padding: 20px 15px;
    }
    
    .modern-search-form .form-group {
        margin-bottom: 15px;
    }
    
    .modern-search-form .form-group.col-xl-2,
    .modern-search-form .form-group.col-xl-3,
    .modern-search-form .form-group.col-xl-4 {
        margin-bottom: 12px;
    }
}

@@media (max-width: 1200px) {
    .modern-search-form {
        padding: 18px 12px;
    }
    
    .modern-search-form .form-group {
        margin-bottom: 12px;
    }
    
    .modern-search-form .form-group.col-lg-3 {
        margin-bottom: 10px;
    }
    
    .modern-input,
    .modern-select {
        padding: 10px 12px;
        font-size: 0.9rem;
    }
    
    .modern-btn {
        padding: 10px 20px;
        font-size: 0.9rem;
    }
}

@@media (max-width: 992px) {
    .modern-search-form {
        padding: 22px 18px;
    }
    
    .modern-search-form .form-group {
        margin-bottom: 16px;
    }
    
    .modern-search-form .form-group.col-md-3 {
        margin-bottom: 12px;
    }
    
    .section_tittle h2 {
        font-size: 2.2rem;
    }
}

@@media (max-width: 768px) {
    .modern-search-form {
        padding: 20px 15px;
    }
    
    .modern-search-form .form-group {
        margin-bottom: 15px;
    }
    
    .modern-search-form .form-group.col-md-3 {
        margin-bottom: 10px;
    }
    
    .section_tittle h2 {
        font-size: 2rem;
    }
    
    .modern-search-form .row {
        margin: 0 -5px;
    }
    
    .modern-search-form .col-md-3 {
        padding: 0 5px;
    }
}

@@media (max-width: 576px) {
    .modern-search-form {
        padding: 15px 10px;
    }
    
    .modern-search-form .form-group {
        margin-bottom: 12px;
    }
    
    .section_tittle h2 {
        font-size: 1.8rem;
    }
    
    .section_tittle p {
        font-size: 1rem;
    }
    
    .modern-input,
    .modern-select {
        font-size: 0.9rem;
        padding: 8px 12px;
    }
    
    .modern-btn {
        font-size: 0.9rem;
        padding: 8px 16px;
    }
}

/* Loading state for cards */
.honey-grid.loading {
    opacity: 0.6;
    pointer-events: none;
}

/* Empty state styling */
.no-results {
    text-align: center;
    padding: 60px 20px;
    color: #7f8c8d;
}

.no-results i {
    font-size: 4rem;
    color: #bdc3c7;
    margin-bottom: 20px;
}

.no-results h3 {
    color: #2c3e50;
    margin-bottom: 10px;
}

.no-results p {
    font-size: 1.1rem;
}
</style>
