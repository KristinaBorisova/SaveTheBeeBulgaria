@model UserViewModel

<!-- Add the Place Order button here -->
<form asp-controller="Home" asp-action="PlaceOrderFromHomepage" method="post">
    <div class="mt-10">
        <input asp-for="FullName" placeholder="Пълно Име" class="single-input" required/>
        <span asp-validation-for="FullName" class="small text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
    {
        <div class="mt-10">
            <input asp-for="PhoneNumber" placeholder="Телефонен номер" class="single-input" readonly />
            <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
        </div>
    }
    else
    {
        <div class="mt-10">
            <input asp-for="PhoneNumber" type="tel" placeholder="Телефонен номер" class="single-input" required />
            <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
        </div>
    }

    <div class="mt-10">
        <input asp-for="Email" type="email" placeholder="Имейл" class="single-input" required/>
        <span asp-validation-for="Email" class="small text-danger"></span>
    </div>

    <div class="mt-10">
        <input asp-for="Address" placeholder="Адрес за доставка" class="single-input" required />
        <span asp-validation-for="Address" class="small text-danger"></span>
    </div>

    <!-- Add the dropdown for община here -->
    <!-- fitnesdobavki.net have a nice checkout page -->

    
    <div class="text-center">
        <button class="genric-btn primary radius mt-10" type="submit">Поръчай</button>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>