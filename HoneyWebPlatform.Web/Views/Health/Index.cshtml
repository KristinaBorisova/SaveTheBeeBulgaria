@{
    ViewData["Title"] = "Database Health Check";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Database Health Check</h2>
                </div>
                <div class="card-body">
                    <div id="health-status" class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Checking database status...</p>
                    </div>
                    
                    <div class="mt-4 text-center">
                        <button id="refresh-btn" class="btn btn-primary" onclick="checkDatabase()">
                            Refresh Status
                        </button>
                        <a href="/User/Register" class="btn btn-secondary ms-2">
                            Back to Registration
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function checkDatabase() {
        const statusDiv = document.getElementById('health-status');
        const refreshBtn = document.getElementById('refresh-btn');
        
        // Show loading state
        statusDiv.innerHTML = `
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Checking database status...</p>
        `;
        refreshBtn.disabled = true;
        
        fetch('/Health/DatabaseStatus')
            .then(response => response.json())
            .then(data => {
                let statusHtml = '';
                let alertClass = '';
                
                if (data.isConnected && data.canCreateUser) {
                    alertClass = 'alert-success';
                    statusHtml = `
                        <div class="alert ${alertClass}">
                            <h4><i class="fas fa-check-circle"></i> Database is Healthy</h4>
                            <p><strong>Status:</strong> ${data.status}</p>
                            <p><strong>Can Create Users:</strong> ${data.canCreateUser ? 'Yes' : 'No'}</p>
                            <p><strong>Last Checked:</strong> ${new Date(data.timestamp).toLocaleString()}</p>
                        </div>
                    `;
                } else {
                    alertClass = 'alert-danger';
                    statusHtml = `
                        <div class="alert ${alertClass}">
                            <h4><i class="fas fa-exclamation-triangle"></i> Database Issues Detected</h4>
                            <p><strong>Status:</strong> ${data.status}</p>
                            <p><strong>Can Create Users:</strong> ${data.canCreateUser ? 'Yes' : 'No'}</p>
                            <p><strong>Last Checked:</strong> ${new Date(data.timestamp).toLocaleString()}</p>
                            <hr>
                            <p><strong>Recommended Actions:</strong></p>
                            <ul>
                                <li>Check if the database server is running</li>
                                <li>Verify connection string configuration</li>
                                <li>Run database migrations if needed</li>
                                <li>Contact system administrator</li>
                            </ul>
                        </div>
                    `;
                }
                
                statusDiv.innerHTML = statusHtml;
            })
            .catch(error => {
                statusDiv.innerHTML = `
                    <div class="alert alert-danger">
                        <h4><i class="fas fa-times-circle"></i> Error Checking Database</h4>
                        <p>Failed to check database status: ${error.message}</p>
                    </div>
                `;
            })
            .finally(() => {
                refreshBtn.disabled = false;
            });
    }
    
    // Check database status on page load
    document.addEventListener('DOMContentLoaded', function() {
        checkDatabase();
    });
</script>
